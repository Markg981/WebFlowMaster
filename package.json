{
  "name": "rest-express-monorepo",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx --require dotenv/config server/index.ts",
    "build": "npm run build --workspace=client && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "NODE_ENV=production node dist/index.js",
    "check": "tsc -b",
    "db:push": "drizzle-kit push",
    "db:migrate": "tsx --require dotenv/config scripts/apply-migrations.ts",
    "test:setup-db": "rm -f data/test.db && cross-env DATABASE_URL=data/test.db tsx server/tests/setup.ts",
    "test": "npm run test:setup-db && cross-env DATABASE_URL=data/test.db vitest run",
    "test:ui": "vitest --ui",
    "install-client": "npm install --prefix client",
    "dev:client": "npm run dev --prefix client",
    "build:client": "npm run build --prefix client",
    "test:client": "npm test --prefix client"
  },
  "dependencies": {
    "@jridgewell/trace-mapping": "^0.3.25",
    "@neondatabase/serverless": "^0.10.4",
    "@playwright/test": "^1.53.0",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "better-sqlite3": "^11.10.0",
    "connect-pg-simple": "^10.0.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.39.3",
    "drizzle-zod": "^0.7.0",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "fs-extra": "^11.3.0",
    "memorystore": "^1.6.7",
    "node-cron": "^4.1.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "playwright": "^1.53.1",
    "puppeteer": "^24.10.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.0",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "20.16.11",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.13",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.30.6",
    "esbuild": "^0.25.0",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.2.0",
    "supertest": "^7.1.1",
    "tsx": "^4.19.1",
    "typescript": "5.6.3",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  },
  "workspaces": [
    "client"
  ]
}
